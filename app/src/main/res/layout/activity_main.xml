<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_new_colour"/>

    <EditText
        android:id="@+id/idEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_index"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/addColourBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/add_new_colour"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/removeColourBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/remove_a_colour"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/updateColourBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/update_a_colour"
            android:layout_weight="1"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>